# Cylestio UI Dashboard - Environment Configuration Example
# Copy this file to .env.local for local development

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:8000
API_TIMEOUT=10000

# Mock API Configuration
NEXT_PUBLIC_USE_MOCK_API=false
MOCK_API_PORT=8080
NEXT_PUBLIC_MOCK_API_URL=http://localhost:8080

# Authentication 
AUTH_SECRET=dev-auth-secret-change-me-in-production
NEXTAUTH_URL=http://localhost:3000

# API Keys (replace with your actual keys)
CYLESTIO_MONITOR_API_KEY=your-monitor-api-key

# Monitoring and Analytics
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Security
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Feature Flags
FEATURE_FLAG_NEW_DASHBOARD=true
FEATURE_FLAG_BETA_FEATURES=false

# Deployment
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# Testing
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000

# Development modes
# mode=mock        Use mock API server (recommended for most development)
# mode=local       Use local API server
# mode=production  Use production API server (requires proper authentication) 