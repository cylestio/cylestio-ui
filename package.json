{
  "name": "@cylestio/ui-dashboard",
  "version": "0.1.0",
  "description": "Enterprise-grade AI Agent Monitoring and Security Dashboard",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "public"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:mock": "concurrently \"npm run mock-api\" \"node -e 'setTimeout(() => process.exit(0), 1000)'\" \"env-cmd -f .env.mock next dev\"",
    "dev:mock-simple": "env-cmd -f .env.mock next dev",
    "build": "next build",
    "build:mock": "env-cmd -f .env.mock next build",
    "clean": "rm -rf .next node_modules/.cache",
    "start": "next start",
    "start:mock": "env-cmd -f .env.mock next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:package": "echo \"Package tests temporarily disabled\" && exit 0",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level=high || true",
    "security:deps": "npx audit-ci --high",
    "security:retire": "npx retire --severity high --path ./",
    "prepare": "husky install",
    "mock-api": "node scripts/mock-api-server.js",
    "dev:real-api": "env-cmd -f .env.development npm run dev",
    "verify-api": "node scripts/verify-api-connection.js",
    "api:use-mock": "node scripts/switch-api-mode.js mock",
    "api:use-real": "node scripts/switch-api-mode.js real",
    "api:debug": "node scripts/api-debug.js",
    "api:fix-endpoints": "node scripts/api-endpoint-fixer.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cylestio/cylestio-ui.git"
  },
  "keywords": [
    "ai",
    "monitoring",
    "security",
    "dashboard",
    "llm",
    "cylestio",
    "ai-security",
    "ai-observability"
  ],
  "author": "Cylestio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cylestio/cylestio-ui/issues"
  },
  "homepage": "https://github.com/cylestio/cylestio-ui#readme",
  "dependencies": {
    "@tremor/react": "^3.13.1",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "date-fns": "^3.3.1",
    "express": "^4.18.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.484.0",
    "next": "^15.2.4",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "react-icons": "^5.5.0",
    "recharts": "^2.10.3"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "audit-ci": "^6.6.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "helmet": "^7.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.33",
    "prettier": "^3.2.5",
    "retire": "^4.3.3",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "@heroicons/react": "^2.1.1"
  }
}
