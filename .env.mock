# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# API Configuration - Mock mode
NEXT_PUBLIC_USE_MOCK_API=true
MOCK_API_PORT=8080
NEXT_PUBLIC_MOCK_API_URL=http://localhost:8080
API_TIMEOUT=10000

# Authentication (not used in mock mode)
AUTH_SECRET=dev-auth-secret
NEXTAUTH_URL=http://localhost:3000

# API Keys (not used in mock mode)
CYLESTIO_MONITOR_API_KEY=dev-monitor-api-key

# Monitoring and Analytics
NEXT_PUBLIC_ANALYTICS_ID=development

# Security
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Feature Flags
FEATURE_FLAG_NEW_DASHBOARD=true
FEATURE_FLAG_BETA_FEATURES=true 